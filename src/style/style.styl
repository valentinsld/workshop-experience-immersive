@import 'https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;700&display=swap'
@import '../fonts/stylesheet.css'

@import './common.styl'
@import './loading.styl'
@import './qte.styl'
@import './endScene.styl'
@import './chapter1.styl'

:root 
  --white #fff
  --grey #a1a6cc // #7D82A7
  --blue #27315E
  --black #040924

  --serpiente 'Serpiente Display Display'

  --ease-OutQuad cubic-bezier(0.250, 0.460, 0.450, 0.940)

html {
  color var(--white)
  font-family: 'Open Sans', sans-serif
  font-weight: 400

  background-color: var(--blue)
}

::selection
  background-color var(--grey)
  color var(--blue)

.link 
  position relative
  cursor pointer
  font-size 110%

  transition all 350ms var(--ease-OutQuad)

.link::after 
  content ''
  position absolute
  bottom -.2em
  left 0
  width 100%
  height 1px
  background-color: var(--grey)
  opacity 0.5

.link::before 
  content ''
  position absolute
  z-index 1
  bottom -.2em
  left 0
  width 100%
  height 1px
  background-color: var(--white)
  opacity .8

  transform-origin: center center
  transform scaleX(0)
  transition all 350ms var(--ease-OutQuad)


.link:hover
  color var(--white)

.link:hover::before   
  transform scaleX(1)
