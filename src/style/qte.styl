#qte 
    pointer-events: none
    color var(--grey)


#pluralChoose__one,
#pluralChoose__two
    position absolute
    top: 50%
    transform translate3D(0, -50%, 0)
    margin-left 7vw
    margin-right 7vw

    text-align center

    opacity 0
    transition: opacity 300ms ease-out


#pluralChoose__one 
    left: 0
#pluralChoose__two 
    right: 0


#pluralChoose__bar 
    position absolute
    left 50%
    bottom 0
    transform translate3D(-50%, -50%, 0)
    margin-bottom 50px

    min-width 400px
    text-align center

    opacity 0

#pluralChoose__bar .line 
    height 5px
    width 0
    background #8F95C4

#pluralChoose__bar .line:after
    content ''
    position absolute
    z-index -1
    top 0
    left 0
    width 100%
    height 5px

    background-color: #6E6D8B
    opacity .5 

#monoChoose 
    position absolute
    top 50%
    right 10%

    opacity 0
    transition: opacity 300ms ease-out

#monoChoose .line 
    display block
    height 5px
    width 0
    background var(--white)


#pluralChoose__one.show,
#pluralChoose__two.show,
#pluralChoose__bar.show,
#monoChoose.show
    opacity 1

.chooseLetter 
    display inline-block
    padding 8px
    min-width: 23px;
    border 1px solid var(--grey)
    border-radius 10px