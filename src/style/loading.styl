.loadScreen
  position absolute
  z-index 100
  top 0
  width 100%
  height 100%
  background-color #000
  display flex
  flex-direction column
  justify-content center
  align-items center
  transition 0.55s opacity ease-out

.load
  margin 0 0 30px 0
  padding 0
  color #fff
  font-family Montserrat
  user-select none

.progressBar
  border-radius 8px
  width 300px
  background-color #232323

.progress
  border-radius 8px
  width 0px
  height 7px
  background-color #fff

// Own Loader Style
/////////////////////
.loadScreen
  background-color: var(--black)
h1 
  margin 10px
  font-family var(--serpiente)
  font-size 8vw
  color #B5BADB

.loadScreen__subtitle
  font-size: 1.5em
  color #6E6D8B

.load 
  font-family var(--serpiente)
  font-size: 1.5em
  color #6E6D8B
  opacity 0.6

.progressBar
  display none

.useCasque
  position absolute
  bottom 50px
  left 50%
  transform: translateX(-50%)
  font-size 90%

  color #6E6D8B